{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    //
    "target": "ES2022",
    "module": "esnext",
    "useDefineForClassFields": true,
    "moduleResolution": "bundler", // if using bundlers like Vite or Rollup
    "lib": ["dom", "es2020"],

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,


    /* Output Configuration */
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Prevents extra .js files during type generation */
    "emitDeclarationOnly": false
  },
  "exclude": [
    "rollup.config.js", // ✅ Ignore Rollup config
    "node_modules", // ✅ Exclude dependencies
    "dist", // ✅ Prevent conflicts with built files
    "*.config.js", // ✅ Generic exclusion for build configs
    "*.config.mjs" // ✅ Also exclude `.mjs` configs if applicable
  ]
}
